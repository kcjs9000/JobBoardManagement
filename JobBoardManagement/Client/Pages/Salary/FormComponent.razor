@inject HttpClient _client

<EditForm Model="@salary" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class=" form-group">
            <label>Highest Salary </label>
            <div>
                <InputText @bind-Value="@salary.HighestSalary" class="form-control" />
                <ValidationMessage For="@(() => salary.HighestSalary)" />
            </div>
        </div>
        <div class="form-group">
            <label>Work Experience: </label>
            <div>
                <InputText @bind-Value="@salary.MinSalary" class="form-control" />
                <ValidationMessage For="@(() => salary.MinSalary)" />
            </div>
        </div>

    </fieldset>

    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
</EditForm>

@code {

    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Salary salary { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

   
}
