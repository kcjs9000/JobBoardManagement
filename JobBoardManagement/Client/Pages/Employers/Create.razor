@page "/employee/create"
@inject HttpClient _client
@inject NavigationManager _navManager


<h3>Register your Company</h3>
<hr />
<br />

<FormComponent ButtonText="Register Company" OnValidSubmit="@CreateEmployee" employer="Employer" />

    @code {
        Employer Employer = new Employer();


        private async Task CreateEmployee()
        {
            await _client.PostAsJsonAsync(Endpoint.EmployersEndPoint, Employer);
            _navManager.NavigateTo("/employee/");
        }

    }

